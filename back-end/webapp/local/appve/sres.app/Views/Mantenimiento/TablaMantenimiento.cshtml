@{
    ViewBag.Titulo = "Mantenimiento";
    ViewBag.SRESDescription = false;
    ViewBag.Header = new Dictionary<string, object>
    {
        ["Imagen"] = "~/Assets/images/bg-mantenimientos.png",
        ["Titulo"] = "MANTENIMIENTOS MAESTROS"
    };
}

@section scripts_footer{
    <script src="@Url.Content("~/Assets/js/pages/mantenimiento.js")"></script>
}

<div class="container-fluid mt-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="estilo-05" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a class="text-sres-gris" href="@Url.Action("Index","Inicio")">Inicio</a></li>
                        <li class="breadcrumb-item"><a class="text-sres-gris" href="@Url.Action("Index", "Convocatoria")">Bandeja de convocatorias</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Mantenimiento de Tablas</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid my-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="estilo-03 text-sres-azul">Mantenimiento de Tablas</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="rayado wow fadeIn"></div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-12 col-sm-12">
                <div class="form-group">
                    <label for="txt-buscar">Buscar&nbsp;</label>
                    <div class="input-group">
                        <div class="input-group-prepend"><span class="input-group-text" id="inputGroup1"><i class="fas fa-table"></i></span></div>
                        <select class="form-control estilo-01 text-sres-oscuro" id="cbo-tabla-mantenimiento" required>
                            <option value="0" data-url="">-Seleccione una tabla de mantenimiento-</option>
                            <option value="1" data-url="Mantenimiento/Usuario">Mantenimiento de usuarios</option>
                            <option value="2" data-url="Mantenimiento/Rol">Mantenimiento de roles</option>
                            <option value="3" data-url="Mantenimiento/TipoCombustible">Mantenimiento de tipo de combustible</option>
                            <option value="4" data-url="Mantenimiento/TipoVehiculoConvencional">Mantenimiento de tipo de vehículo convencional</option>
                            <option value="5" data-url="Mantenimiento/TipoVehiculoElectrico">Mantenimiento de tipo de vehículo eléctrico</option>
                            <option value="6" data-url="Mantenimiento/TipoTransporte">Mantenimiento de tipo de transporte</option>
                            <option value="7" data-url="Mantenimiento/Formula">Mantenimiento de fórmula</option>
                            <option value="8" data-url="Mantenimiento/ValoresFactor">Mantenimiento de valores factor</option>                            
                            @*<option value="7" data-url="Mantenimiento/Anno">Año</option>*@
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-6">&nbsp;</div>
                    <div class="col-sm-12 col-md-6 col-lg-6"><a class="btn btn-primary w-100 mb-2" href="#" id="ir-mantenimiento" onclick="fn_irMantenimiento(event);">Ir al mantenimiento</a></div>
                </div>
            </div>
        </div>
    </div>
</div>


